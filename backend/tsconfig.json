{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "process-env.d.ts",
    "express.d.ts",
    "src/index.ts",
    "src/swagger.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
